<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="@dimen/category_image_size"
            android:layout_height="@dimen/category_image_size" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/category_text_padding"
            android:layout_marginLeft="@dimen/category_text_margin"
            android:textSize="@dimen/category_text_size" />
    </LinearLayout>
</RelativeLayout>